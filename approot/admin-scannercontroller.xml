<?xml version="1.0" encoding="UTF-8" ?>
<messages xmlns:if="Wt.WTemplate.conditions">

<message id="Lms.Admin.ScannerController.template">
	<div class="card">
		<h5 class="card-header">${tr:Lms.Admin.ScannerController.scanner}</h5>
		<div class="card-body">
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label" for="status">
					${tr:Lms.Admin.ScannerController.status}
				</label>
				<div class="col-sm-10">
					<input type="text" readonly="readonly" class="form-control" id="status" value="${status}"/>
				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label" for="step-status">
					${tr:Lms.Admin.ScannerController.step-status}
				</label>
				<div class="col-sm-10">
					<input type="text" readonly="readonly" class="form-control" id="step-status" value="${step-status}"/>
				</div>
			</div>
			<div class="mb-3 row">
				<label class="col-sm-2 col-form-label" for="last-scan">
					${tr:Lms.Admin.ScannerController.last-scan}
				</label>
				<div class="col-sm-10">
					<input type="text" readonly="readonly" class="form-control" id="last-scan" value="${last-scan}"/>
				</div>
			</div>
			<div class="mb-3 row">
				<div class="offset-sm-2">
					${btn-report class="btn btn-sm"}
				</div>
			</div>
			<div class="col-12">
				${btn-action}
			</div>
		</div>
	</div>
</message>

</messages>
