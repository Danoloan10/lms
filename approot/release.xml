<?xml version="1.0" encoding="UTF-8" ?>
<messages xmlns:if="Wt.WTemplate.conditions">
<!--FORMS message blocks-->

<message id="Lms.Explore.Release.template.link-btn">
	<i class="fa fa-external-link"></i>
</message>

<message id="Lms.Explore.Release.template">
	<div class="row mb-3">
		<div class="col-md-4">
			${cover class="Lms-explore-release-cover"}
		</div>
		<div class="col-md-8">
			<div class="mb-3">
				${name}
				${<if-has-release-artists>}${artists}${</if-has-release-artists>}
				${<if-has-various-release-artists>}${tr:Lms.Explore.various-artists}${</if-has-various-release-artists>}
				<small>${<if-has-year>}${year}${<if-has-orig-year>} (${orig-year})${</if-has-orig-year>} Â· ${</if-has-year>}${duration}</small>
				${clusters class="mb-2"}
				${play-btn class="me-2"}${more-btn}
			</div>
			${container}
		</div>
	</div>
	<div class="row">
		${<if-has-similar-releases>}
		<div class="col-12">
			<h3>${tr:Lms.Explore.Release.similar-releases}</h3>
			${similar-releases class="row"}
		</div>
		${</if-has-similar-releases>}
		${<if-has-copyright>}
		<div class="col-12 col-md-4">
			<h3>${tr:Lms.Explore.Release.copyright}</h3>
			${copyright class="text-muted"}
		</div>
		${</if-has-copyright>}
		${<if-has-mbid>}
		<div class="col-12 col-md-4">
			<h3>${tr:Lms.Explore.links}</h3>
			${mbid-link class="text-muted"}
		</div>
		${</if-has-mbid>}
	</div>
</message>

<message id="Lms.Explore.Release.template.entry-release-artist">
	${artist}
</message>

<message id="Lms.Explore.Release.template.entry-disc">
	<h4>${disc-title}</h4>
	${tracks}
</message>

<message id="Lms.Explore.Release.template.entry">
	<div class="row ${is-playing} align-items-center">
		<div class="col-1 col-sm-1 text-end">
			${<if-has-track-number>}${track-number}${</if-has-track-number>}
		</div>
		<div class="col-7 col-sm-9">
			${name}
			${<if-has-artists>}${artists}${</if-has-artists>}
		</div>
		<div class="col-4 col-sm-2">
			<div class="Lms-explore-release-entry-controls">
				${play-btn class="me-2"}${more-btn}
			</div>
			<div class="Lms-explore-release-entry-track-duration">
				${duration}
			</div>
		</div>
	</div>
</message>

<message id="Lms.Explore.Release.template.entry-artist">
	${artist}
</message>

</messages>
